const app = new Hono();

// Global error handler
app.onError((err, c) => {
  console.error('ğŸ”¥ Global error caught:', err);
  console.error('Error stack:', err.stack);
  return c.json({
    error: 'Internal server error',
    message: err.message,
    timestamp: new Date().toISOString()
  }, 500);
});

// Unhandled promise rejection handler
addEventListener('unhandledrejection', (event) => {
  console.error('ğŸš¨ Unhandled promise rejection:', event.reason);
  event.preventDefault();
});

// Uncaught exception handler
addEventListener('error', (event) => {
  console.error('ğŸš¨ Uncaught error:', event.error);
});

// Middleware
app.use(
  '*',
  cors({
    origin: '*',
    allowHeaders: ['*'],
    allowMethods: ['*'],
  })
);
app.use('*', logger(console.log));

// Initialize Supabase client with error handling
let supabase;
try {
  const supabaseUrl = Deno.env.get('SUPABASE_URL');
  const supabaseServiceKey = Deno.env.get('SUPABASE_SERVICE_ROLE_KEY');

  console.log('ğŸ”§ Initializing Supabase client...');
  console.log('SUPABASE_URL present:', !!supabaseUrl);
  console.log('SUPABASE_SERVICE_ROLE_KEY present:', !!supabaseServiceKey);

  if (!supabaseUrl || !supabaseServiceKey) {
    throw new Error(`Missing Supabase environment variables: URL=${!!supabaseUrl}, ServiceKey=${!!supabaseServiceKey}`);
  }

  supabase = createClient(supabaseUrl, supabaseServiceKey);
  console.log('âœ… Supabase client initialized successfully');
} catch (error) {
  console.error('âŒ Failed to initialize Supabase client:', error);
  throw error;
}

